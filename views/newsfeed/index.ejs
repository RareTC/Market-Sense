<%- include('../partials/header') %>

    <form class="d-flex" action="/newsfeed" method="GET">
        <input class="form-control me-2 mb-4" type="text" name="symbol" placeholder="Search a Company Ticker">
        <button class="btn btn-primary mb-4" id="search-button" type="submit">
            <i class="fa fa-search"></i>
        </button>
    </form>

    <% if (newsData) { %>
        <% newsData.forEach(function(n) { %>
                <div class="card w-50 mx-auto" id="cards">
                    <img class="card-img-top" src="<%= n.image_url %>" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title"><%= n.title %></h5>
                        <p class="card-text"><%= n.description %></p>
                        <p class="card-text"><%= n.published_at %></p>
                    </div>
                    <div class="card-body">
                        <a href="<%= n.url %>" class="card-link">Link To Article</a>
                    </div>
                </div>
        <% }); %>
    <% } %>

<%- include('../partials/footer') %>